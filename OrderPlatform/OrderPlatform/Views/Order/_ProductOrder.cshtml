@model OrderPlatform.Models.ProductOrderModel

@using (Html.BeginCollectionItem("orderProductList"))
{
<tr>
    <td>
        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.orderId)
        @Html.EditorFor(model => model.quantity, new { htmlAttributes = new { @class = "form-control" } })
    </td>
    <td>
        <label class="control-label col-md-2">@Model.total_price€</label>
    </td>
    <td>
        @Html.DropDownListFor(model => model.productId, new SelectList(ViewBag.productList, "Value", "Text"), new { @class = "form-control" })
    </td>
    <td>
        <a href="~/Order/DeleteProductOrder/@Model.id" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
    </td>
</tr>
}